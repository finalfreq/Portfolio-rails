
<%= bootstrap_form_for [current_user, @reference], remote: true do |f| %>
  <%= f.text_area :name, placeholder: 'Add Comment', required: true %>
  <%= f.text_area :email, placeholder: 'Add Comment', required: true %>
  <%= f.submit data:{disable_with: 'Commenting....'}, class: 'btn btn-primary btn-block' %>
<% end %>
