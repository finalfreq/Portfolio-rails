<%= content_for(:title, "#{@project.name} | JW") %>

<h1 class="page-header text-center"><%= @project.name%> </h1>

<% if can? :manage, Post %>
  <div class="link-group">
    <%= link_to "Edit #{@project.name}", edit_category_project_path(@category, @project), class: "btn btn-info btn-block" %>
    <%= link_to "Delete #{@project.name}", category_project_path(@category, @project), class: "btn btn-danger btn-block",
                                          data: {confirm: "Remove Project?",
                                                  method: 'delete'} %>
  </div>
<% end %>
<h1 class="page-center">Project Information</h1>
<h3>Framework/Language: <span class="text-info"> <%= @category.name %> </span></h3>
<p class="lead text-info">
  <%= @project.description %>
</p>
<p class="lead text-success">
  Project on GitHub: <a href="http://<%= @project.link %>"> <%= @project.name %></a>
</p>
